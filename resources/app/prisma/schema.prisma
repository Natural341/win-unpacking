// Prisma Schema for Barcode System - Full Professional Version

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// KULLANICI YÖNETİMİ
// ============================================

// Kullanıcılar
model User {
  id          String    @id @default(cuid())
  username    String    @unique
  password    String    // hashed
  email       String?   @unique
  fullName    String
  role        String    @default("cashier") // admin, manager, cashier, warehouse
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  sales           Sale[]
  cashRegisters   CashRegister[]
  activityLogs    ActivityLog[]
  shifts          Shift[]
}

// Kullanıcı Aktivite Logları
model ActivityLog {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  action      String   // login, logout, sale, product_add, etc.
  description String?
  metadata    String?  // JSON string
  ipAddress   String?
  createdAt   DateTime @default(now())
}

// Vardiya Yönetimi
model Shift {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  startTime   DateTime
  endTime     DateTime?
  startCash   Float     @default(0)
  endCash     Float?
  status      String    @default("active") // active, closed
  notes       String?
  createdAt   DateTime  @default(now())
}

// ============================================
// ÜRÜN VE KATEGORİ
// ============================================

// Kategoriler
model Category {
  id          String    @id @default(cuid())
  name        String
  description String?
  parentId    String?   // Alt kategori desteği
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

// Ürünler
model Product {
  id            String         @id @default(cuid())
  barcode       String?        @unique
  name          String
  description   String?
  category      Category?      @relation(fields: [categoryId], references: [id])
  categoryId    String?
  supplier      Supplier?      @relation(fields: [supplierId], references: [id])
  supplierId    String?
  price         Float
  costPrice     Float          @default(0)
  stock         Float          @default(0)
  minStock      Float          @default(0)
  maxStock      Float?
  unit          String         @default("adet")
  shelfLocation String?        // Raf konumu
  expiryDate    DateTime?      // Son kullanma tarihi
  taxRate       Float          @default(18) // KDV oranı
  imageUrl      String?
  isWeighed     Boolean        @default(false) // Tartılı ürün mü?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  saleItems         SaleItem[]
  stockMovements    StockMovement[]
  purchaseItems     PurchaseItem[]
  returnItems       ReturnItem[]
  stockCounts       StockCountItem[]
  promotions        PromotionProduct[]
}

// ============================================
// MÜŞTERİ YÖNETİMİ
// ============================================

// Müşteriler
model Customer {
  id              String    @id @default(cuid())
  code            String    @unique
  name            String
  email           String?
  phone           String?
  address         String?
  taxNumber       String?
  taxOffice       String?
  customerType    String    @default("retail") // retail, wholesale, vip
  loyaltyPoints   Int       @default(0)
  creditLimit     Float     @default(0)
  currentBalance  Float     @default(0) // Borç/Alacak
  discount        Float     @default(0) // Müşteriye özel indirim %
  notes           String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  sales               Sale[]
  returns             Return[]
  customerTransactions CustomerTransaction[]
}

// Müşteri Hesap Hareketleri
model CustomerTransaction {
  id          String    @id @default(cuid())
  customer    Customer  @relation(fields: [customerId], references: [id])
  customerId  String
  type        String    // payment, sale, return, adjustment
  amount      Float
  balance     Float     // İşlem sonrası bakiye
  description String?
  referenceId String?   // Satış veya ödeme ID'si
  createdAt   DateTime  @default(now())
}

// ============================================
// TEDARİKÇİ YÖNETİMİ
// ============================================

// Tedarikçiler
model Supplier {
  id              String    @id @default(cuid())
  code            String    @unique
  name            String
  contactPerson   String?
  email           String?
  phone           String?
  address         String?
  taxNumber       String?
  taxOffice       String?
  currentBalance  Float     @default(0) // Borç/Alacak
  paymentTerm     Int       @default(0) // Ödeme vadesi (gün)
  notes           String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  products              Product[]
  purchases             Purchase[]
  supplierTransactions  SupplierTransaction[]
}

// Alış Faturaları
model Purchase {
  id              String         @id @default(cuid())
  purchaseNumber  String         @unique
  supplier        Supplier       @relation(fields: [supplierId], references: [id])
  supplierId      String
  invoiceNumber   String?
  invoiceDate     DateTime?
  totalAmount     Float
  discount        Float          @default(0)
  tax             Float          @default(0)
  finalAmount     Float
  paymentStatus   String         @default("pending") // pending, partial, paid
  paidAmount      Float          @default(0)
  dueDate         DateTime?
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  items           PurchaseItem[]
}

// Alış Faturası Kalemleri
model PurchaseItem {
  id          String   @id @default(cuid())
  purchase    Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  purchaseId  String
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  quantity    Float
  unitPrice   Float
  discount    Float    @default(0)
  totalPrice  Float
  createdAt   DateTime @default(now())
}

// Tedarikçi Hesap Hareketleri
model SupplierTransaction {
  id          String   @id @default(cuid())
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  supplierId  String
  type        String   // payment, purchase, return, adjustment
  amount      Float
  balance     Float    // İşlem sonrası bakiye
  description String?
  referenceId String?  // Alış veya ödeme ID'si
  createdAt   DateTime @default(now())
}

// ============================================
// SATIŞ VE İADE
// ============================================

// Satışlar
model Sale {
  id              String     @id @default(cuid())
  saleNumber      String     @unique
  user            User?      @relation(fields: [userId], references: [id])
  userId          String?
  customer        Customer?  @relation(fields: [customerId], references: [id])
  customerId      String?
  cashRegister    CashRegister? @relation(fields: [cashRegisterId], references: [id])
  cashRegisterId  String?
  totalAmount     Float
  discount        Float      @default(0)
  discountType    String?    // percentage, fixed
  tax             Float      @default(0)
  finalAmount     Float
  paymentMethod   String     // cash, creditCard, multiplePayment, onAccount
  paymentDetails  String?    // JSON - çoklu ödeme detayları
  cashReceived    Float?
  changeGiven     Float?
  isPrinted       Boolean    @default(false)
  status          String     @default("completed") // completed, pending, cancelled
  customerName    String?
  customerPhone   String?
  notes           String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  items           SaleItem[]
  returns         Return[]
}

// Satış Kalemleri
model SaleItem {
  id          String   @id @default(cuid())
  sale        Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId      String
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  quantity    Float
  unitPrice   Float
  discount    Float    @default(0)
  discountType String? // percentage, fixed
  tax         Float    @default(0)
  totalPrice  Float
  createdAt   DateTime @default(now())
}

// İadeler
model Return {
  id            String       @id @default(cuid())
  returnNumber  String       @unique
  sale          Sale?        @relation(fields: [saleId], references: [id])
  saleId        String?
  customer      Customer?    @relation(fields: [customerId], references: [id])
  customerId    String?
  totalAmount   Float
  refundMethod  String       // cash, creditCard, onAccount
  reason        String?
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  items         ReturnItem[]
}

// İade Kalemleri
model ReturnItem {
  id          String   @id @default(cuid())
  return      Return   @relation(fields: [returnId], references: [id], onDelete: Cascade)
  returnId    String
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  quantity    Float
  unitPrice   Float
  totalPrice  Float
  reason      String?
  createdAt   DateTime @default(now())
}

// ============================================
// STOK YÖNETİMİ
// ============================================

// Stok Hareketleri
model StockMovement {
  id            String   @id @default(cuid())
  product       Product  @relation(fields: [productId], references: [id])
  productId     String
  type          String   // in, out, adjustment, return, waste
  quantity      Float
  previousStock Float
  newStock      Float
  referenceType String?  // sale, purchase, return, count, manual
  referenceId   String?
  reason        String?
  notes         String?
  createdAt     DateTime @default(now())
}

// Stok Sayımı
model StockCount {
  id          String          @id @default(cuid())
  countNumber String          @unique
  status      String          @default("in_progress") // in_progress, completed, cancelled
  startDate   DateTime        @default(now())
  endDate     DateTime?
  notes       String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  items       StockCountItem[]
}

// Stok Sayım Kalemleri
model StockCountItem {
  id              String      @id @default(cuid())
  stockCount      StockCount  @relation(fields: [stockCountId], references: [id], onDelete: Cascade)
  stockCountId    String
  product         Product     @relation(fields: [productId], references: [id])
  productId       String
  systemStock     Float       // Sistemdeki stok
  countedStock    Float       // Sayılan stok
  difference      Float       // Fark
  notes           String?
  createdAt       DateTime    @default(now())
}

// ============================================
// KASA VE MUHASEBE
// ============================================

// Kasa
model CashRegister {
  id            String    @id @default(cuid())
  registerNumber String   @unique
  name          String
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?
  openingCash   Float     @default(0)
  closingCash   Float?
  status        String    @default("open") // open, closed
  openedAt      DateTime  @default(now())
  closedAt      DateTime?
  zReportNumber String?
  notes         String?

  sales         Sale[]
  transactions  CashTransaction[]
}

// Kasa İşlemleri (Gelir/Gider)
model CashTransaction {
  id              String        @id @default(cuid())
  cashRegister    CashRegister  @relation(fields: [cashRegisterId], references: [id])
  cashRegisterId  String
  type            String        // income, expense, opening, closing
  category        String?       // rent, utilities, salary, other
  amount          Float
  description     String?
  referenceId     String?
  createdAt       DateTime      @default(now())
}

// Z Raporları
model ZReport {
  id              String   @id @default(cuid())
  reportNumber    String   @unique
  date            DateTime @default(now())
  cashRegisterId  String
  totalSales      Int      @default(0)
  totalRevenue    Float    @default(0)
  cashSales       Float    @default(0)
  cardSales       Float    @default(0)
  totalDiscount   Float    @default(0)
  totalTax        Float    @default(0)
  totalReturns    Float    @default(0)
  openingCash     Float    @default(0)
  closingCash     Float    @default(0)
  expectedCash    Float    @default(0)
  cashDifference  Float    @default(0)
  notes           String?
  createdAt       DateTime @default(now())
}

// ============================================
// KAMPANYA VE PROMOSYON
// ============================================

// Kampanyalar
model Promotion {
  id            String            @id @default(cuid())
  name          String
  description   String?
  type          String            // discount, buyXgetY, bundle
  discountType  String?           // percentage, fixed
  discountValue Float?
  minQuantity   Int?              // Minimum adet
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean           @default(true)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  products      PromotionProduct[]
}

// Kampanya Ürünleri
model PromotionProduct {
  id          String    @id @default(cuid())
  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  promotionId String
  product     Product   @relation(fields: [productId], references: [id])
  productId   String
  createdAt   DateTime  @default(now())

  @@unique([promotionId, productId])
}

// ============================================
// SİSTEM AYARLARI
// ============================================

// Sistem Ayarları
model Settings {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String   // JSON string
  description     String?
  updatedAt       DateTime @updatedAt
}

// Şirket Bilgileri (Settings içinde saklanabilir ama ayrı tablo da olabilir)
model CompanyInfo {
  id          String   @id @default(cuid())
  name        String
  address     String?
  phone       String?
  email       String?
  taxNumber   String?
  taxOffice   String?
  logo        String?
  currency    String   @default("TRY")
  updatedAt   DateTime @updatedAt
}

// ============================================
// BİLDİRİMLER
// ============================================

// Bildirimler
model Notification {
  id          String   @id @default(cuid())
  type        String   // low_stock, expiry_warning, system, etc.
  title       String
  message     String
  priority    String   @default("normal") // low, normal, high, urgent
  isRead      Boolean  @default(false)
  metadata    String?  // JSON
  createdAt   DateTime @default(now())
}
