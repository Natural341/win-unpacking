{
  "name": "barkod",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:seed": "tsx prisma/seed.ts",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && node scripts/copy-static.js && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.barkod.app",
    "productName": "Barkod Sistemi",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "electron/**/*",
      "prisma/**/*",
      "dev.db",
      "package.json",
      "!.next/cache/**/*",
      "!**/*.map"
    ],
    "asar": false,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Barkod Sistemi"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "extraMetadata": {
      "version": "2.0.0"
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@zxing/library": "^0.21.3",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "jsonwebtoken": "^9.0.2",
    "next": "16.0.1",
    "next-intl": "^4.5.0",
    "node-thermal-printer": "^4.4.4",
    "prisma": "^6.19.0",
    "react": "19.2.0",
    "react-barcode": "^1.6.1",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "react-webcam": "^7.2.0",
    "serialport": "^12.0.0",
    "usb": "^2.11.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@serialport/binding-mock": "^10.2.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
